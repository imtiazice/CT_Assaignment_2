<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="2"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="#ccffcc">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="2"
            android:layout_weight="1"
            android:gravity="center">

            <ImageView
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@mipmap/clock_final"
                android:paddingTop="70dp"
                android:layout_weight="1" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="[Start an Activity]"
                android:gravity="center_horizontal"
                android:textSize="20sp"
                android:layout_weight="1"
                android:layout_marginTop="10dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="2"
            android:layout_weight="1"
            android:gravity="center">

            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="MONDAY"
                android:layout_weight="1"
                android:textSize="25dp"
                android:paddingTop="30sp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="27"
                android:gravity="center_horizontal"
                android:padding="5dp"
                android:layout_weight="1"
                android:textSize="90dp"
                android:layout_marginTop="-40dp"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="2"
            android:layout_weight="1"
            android:gravity="center_horizontal">

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableTop="@mipmap/list_final_one"
                android:layout_weight="1"
                android:text="Activity Feed"
                android:textAllCaps="false"
                android:textColor="#ffffff"
                android:textSize="18sp"
                android:background="@drawable/background"
                android:padding="25sp"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableTop="@mipmap/folder_final_one"
                android:layout_weight="1"
                android:text="Docoments"
                android:textAllCaps="false"
                android:textColor="#ffffff"
                android:textSize="18sp"
                android:background="@drawable/background"
                android:padding="25sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="2"
            android:layout_weight="1"
            android:gravity="center">

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableTop="@mipmap/message_final_one"
                android:layout_weight="1"
                android:text="Messages"
                android:textAllCaps="false"
                android:textColor="#ffffff"
                android:textSize="18sp"
                android:background="@drawable/background"
                android:padding="25sp"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableTop="@mipmap/user_final_one"
                android:layout_weight="1"
                android:text="Profile"
                android:textAllCaps="false"
                android:textColor="#ffffff"
                android:textSize="18sp"
                android:background="@drawable/background"
                android:padding="27sp"/>

        </LinearLayout>

    </LinearLayout>




</LinearLayout>
